{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "liveapp",
    "version": "0.4.0-DEV"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true
      },
      "window": {
        "close": true,
        "minimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.antoinejt.liveapp",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'; frame-src https://e.widgetbot.io/; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:;"
    },
    "windows": [
      {
        "label": "main",
        "title": "LiveApp",
        "url": "index.html",
        "fullscreen": false,
        "resizable": true,
        "decorations": false,
        "visible": false,
        "alwaysOnTop": true,
        "width": 800,
        "height": 600
      }
    ]
  }
}
